{% extends "base.twig" %}

{% block body %}
    <main class="single-post">
        <article class="post-content">
            <header class="post-header">
                <h1 class="post-title">{{ post.title }}</h1>
                <div class="post-meta">
                    <time class="post-date" datetime="{{ post.date|date('c') }}">
                        {{ post.date|date('F j, Y') }}
                    </time>
                    <span class="post-author">Par {{ post.author.name }}</span>
                    {% if post.categories %}
                        <div class="post-categories">
                            {% for category in post.categories %}
                                <a href="{{ category.link }}" class="category-link">{{ category.name }}</a>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </header>

            {% if post.thumbnail %}
                <div class="post-featured-image">
                    <img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}" />
                </div>
            {% endif %}

            <div class="post-body">
                {{ post.content }}
            </div>

            {% if post.tags %}
                <footer class="post-footer">
                    <div class="post-tags">
                        <strong>Tags:</strong>
                        {% for tag in post.tags %}
                            <a href="{{ tag.link }}" class="tag-link">#{{ tag.name }}</a>
                        {% endfor %}
                    </div>
                </footer>
            {% endif %}
        </article>

        {% if related_posts %}
            <aside class="related-posts">
                <h3>Articles similaires</h3>
                <div class="related-posts-grid">
                    {% for related_post in related_posts %}
                        <article class="related-post">
                            {% if related_post.thumbnail %}
                                <div class="related-post-image">
                                    <a href="{{ related_post.link }}">
                                        <img src="{{ related_post.thumbnail.src('medium') }}" alt="{{ related_post.thumbnail.alt }}" />
                                    </a>
                                </div>
                            {% endif %}
                            <div class="related-post-content">
                                <h4><a href="{{ related_post.link }}">{{ related_post.title }}</a></h4>
                                <p>{{ related_post.preview.length(100) }}</p>
                                <time class="related-post-date">{{ related_post.date|date('F j, Y') }}</time>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            </aside>
        {% endif %}

        <nav class="post-navigation">
            {% if post.prev %}
                <div class="nav-previous">
                    <a href="{{ post.prev.link }}" rel="prev">
                        <span class="nav-subtitle">Article précédent</span>
                        <span class="nav-title">{{ post.prev.title }}</span>
                    </a>
                </div>
            {% endif %}
            
            {% if post.next %}
                <div class="nav-next">
                    <a href="{{ post.next.link }}" rel="next">
                        <span class="nav-subtitle">Article suivant</span>
                        <span class="nav-title">{{ post.next.title }}</span>
                    </a>
                </div>
            {% endif %}
        </nav>
    </main>
{% endblock %}
